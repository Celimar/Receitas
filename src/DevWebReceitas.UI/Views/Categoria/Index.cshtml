@model IEnumerable<DevWebReceitas.Application.Dtos.Categoria.CategoriaDto>

@{
    ViewData["Title"] = "Lista";
}

<h1>Lista</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new {  codigo = item.Codigo  }) |
                @Html.ActionLink("Detalhes", "Details", new { codigo = item.Codigo }) |
                @Html.ActionLink("Excluir", "Delete", new { codigo = item.Codigo })
            </td>
        </tr>
}
    </tbody>
</table>
